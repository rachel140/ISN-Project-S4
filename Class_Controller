from Class_SeaLevel import SeaLevel
from Class_ElevationData import ElevationData

class Controller:

    def __init__(self):
        self.SeaLevel = SeaLevel()
        self.ElevationData = ElevationData("ETOPO_2022_v1_60s_N90W180_bed.nc")

    def get_sea_level(self, year, scenario):
        sea_level = self.SeaLevel.retrieve_sea_level(year, scenario)
        return sea_level

